<body>

    <!--====== HEADER PART START ======-->

    <header class="header-area">

        <div class="navbar-area" style="background-color: #e3f2fd;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <img src="~/images/water-logo-transparent-7.png" width="100" height="100" />
                            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                                @*LISTA DE TODOS OS UTILIZADORES EM GERAL*@

                                <ul class="navbar-nav flex-grow-1">
                                    <li class="nav-item">
                                       @* <img src="~/images/A horta do Simao232023888.png" alt="Descrição da imagem">*@
                                        @*<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">SoAguas</a>*@
                                    </li>
                                    <li class="nav-item">
                                        <div class="btn-group btn btn-outline-info">
                                            <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Category menu
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" asp-action="Index" asp-controller="ProductSites">
                                                    <button class="dropdown-item" type="button">Products</button>
                                                </a>
                                                
                                                <a class="dropdown-item" asp-action="IndexSite" asp-controller="Services">
                                                    <button class="dropdown-item" type="button">Services</button>
                                                </a>

                                                <a class="dropdown-item" asp-action="Index" asp-controller="Home">
                                                    <button class="dropdown-item" type="button">Home</button>
                                                </a>

                                                
                                            </div>
                                        </div>


                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="create">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                </ul>


                                @*LISTA DE TODOS DO ADMIN*@
                                <ul class="navbar-nav flex-grow-1">
                                    @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="DashBoards" asp-action="Index">
                                                <i class="fa-regular fa-user"></i> Admin
                                            </a>
                                        </li>

                                    }
                                </ul>

                                @*LISTA DE TODOS OS UTILIZADORES LOGADOS OU COM CONTAS*@

                                <ul class="navbar-nav flex-grow-1">
                                    @if (this.User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">My Product</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="BuyServices" asp-action="Index">My Service</a>
                                        </li>

                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="ChangeUser">@this.User.Identity.Name</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                        </li>
                                    }
                                  
                                </ul>
                                
                            </div>

                        </nav> <!-- navbar -->
                    </div>
                </div> <!-- row -->
            </div> <!-- container -->
            <br />
            <div class="d-flex justify-content-center">
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
            <br />
        </div> <!-- navbar area -->
      
    </header>
    <hr />
    <br />
    <br />
    <!--====== HEADER PART ENDS ======-->



    <!--====== BODY PART START ======-->

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--====== BODY PART START ======-->



    <!--====== FOOTER PART START ======-->

