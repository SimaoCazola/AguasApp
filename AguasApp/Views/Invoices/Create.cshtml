@using AguasApp.Data.Entities
@model InvoiceConsumptionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />

<div class="container">

    <br />
    <br />
    <br />
    <br />
    <h4>Create Invoice</h4>
    <div class="row">

        @*----START FORM----*@
        <div class="col-md-6">
            <form asp-action="Create">
                <div>
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Invoice.FullName" class="control-label"></label>
                    <input asp-for="Invoice.FullName" class="form-control" />
                    <span asp-validation-for="Invoice.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Nif" class="control-label"></label>
                    <input asp-for="Invoice.Nif" class="form-control" />
                    <span asp-validation-for="Invoice.Nif" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Address" class="control-label"></label>
                    <input asp-for="Invoice.Address" class="form-control" />
                    <span asp-validation-for="Invoice.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.InvoiceNumber" class="control-label"></label>
                    <input asp-for="Invoice.InvoiceNumber" class="form-control" />
                    <span asp-validation-for="Invoice.InvoiceNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Scalation" class="control-label"></label>
                    <select asp-for="Invoice.Scalation" class="form-control" asp-items="Html.GetEnumSelectList<Scalation>()"></select>
                    <span asp-validation-for="Invoice.Scalation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Descriptions" class="control-label"></label>
                    <input asp-for="Invoice.Descriptions" class="form-control" />
                    <span asp-validation-for="Invoice.Descriptions" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Price" class="control-label"></label>
                    <select asp-for="Invoice.Price" class="form-control" asp-items="Html.GetEnumSelectList<Price>()"></select>
                    <span asp-validation-for="Invoice.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Volume" class="control-label"></label>
                    <input asp-for="Invoice.Volume" class="form-control" />
                    <span asp-validation-for="Invoice.Volume" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.LastReadingDate" class="control-label"></label>
                    <input asp-for="Invoice.LastReadingDate" class="form-control" />
                    <span asp-validation-for="Invoice.LastReadingDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.DueDate" class="control-label"></label>
                    <input asp-for="Invoice.DueDate" class="form-control" />
                    <span asp-validation-for="Invoice.DueDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Status" class="control-label"></label>
                    <select asp-for="Invoice.Status" class="form-control" asp-items="Html.GetEnumSelectList<Status>()"></select>
                    <span asp-validation-for="Invoice.Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Reference" class="control-label"></label>
                    <input asp-for="Invoice.Reference" class="form-control" />
                    <span asp-validation-for="Invoice.Reference" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Invoice.Entity" class="control-label"></label>
                    <input asp-for="Invoice.Entity" class="form-control" />
                    <span asp-validation-for="Invoice.Entity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                
            </form>
        </div>
        @*----END FORM----*@

        @*----START TABLE CUSTOMER----*@
        <div class="col-md-6">
            <h1>Customer List</h1>
            <p>
                <a asp-action="Index" asp-controller="Customers" class="btn btn-primary"> Go To Customer</a>
            </p>
            <table class="table" id="MyTable">
                <thead>
                    <tr class="table-danger">
                        <th>
                            @Html.DisplayNameFor(model => model.Customer.Nif)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer.FullName)
                        </th>
                        <th>
                         @*   @Html.DisplayNameFor(model => model.Customer.LastName)*@
                        </th>
                        <th>
                         @*   @Html.DisplayNameFor(model => model.Customer.PhoneNumber)*@
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Customer.PostalCode)
                        </th>
                        <th>
                           @* @Html.DisplayNameFor(model => model.Customer.Email)*@
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Customers)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nif)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                              @*  @Html.DisplayFor(modelItem => item.LastName)*@
                            </td>
                            <td>
                               @* @Html.DisplayFor(modelItem => item.PhoneNumber)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PostalCode)
                            </td>
                            <td>
                               @* @Html.DisplayFor(modelItem => item.Email)*@
                            </td>
                            <td>
                               @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*----END TABLE CUSTOMER----*@

    </div>
</div>

@section Scripts{
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}
